<AccountsScreenApp>:  

    id: thePanel
    size_hint: 1, 1 
    background_color: .120, .180, .273, 1
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    
    TabbedPanelItem:
        id: tab1
        text: 'actions'
        StackLayout:
            id: container
            size_hint_y: None
            ScrollView:
                size_hint: (1, .9)
                bar_width: 10
                bar_color: 1, 0, 0, 1   # red
                bar_inactive_color: 0, 0, 1, 1   # blue
                effect_cls: "ScrollEffect"
                scroll_type: ['bars']
                GridLayout:
                    id: accounts
                    cols: 1
                    size_hint_y: None
                    siz_hint_x: None
                    background_color: .120, .180, .273, 1
                    BoxLayout:
                        Button:
                            text: 'log in'
                            on_press: app.Loginpressed()
                        Button:
                            text: 'reset passwords'
                            on_press: root.ResetWebAccountPasswords()
                        Button:
                            text: 'settings'
                            on_press: root.switchtosettingsscreen()
                        Button: 
                            text: 'login all'
                        Button:
                            text: 'Create Folder'
                            on_press: root.createfolder() #thePanel.do_tab_toggle()
                        Button:
                            text: 'move selected'
                            on_press: root.moveto()
                        Button: 
                            text: 'del selected'
                            on_press: root.deleteAccounts()

